<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard - Feedback System</title>
    <link href="/css/output.css" rel="stylesheet">
</head>
<body class="bg-gray-100">
    <div class="min-h-screen">
        <nav class="bg-white shadow-sm">
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
                <div class="flex justify-between h-16">
                    <div class="flex items-center">
                        <h1 class="text-xl font-semibold">Feedback Dashboard</h1>
                    </div>
                    <div class="flex items-center">
                        <a href="/logout" class="text-gray-500 hover:text-gray-700">Logout</a>
                    </div>
                </div>
            </div>
        </nav>

        <main class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
            <div class="px-4 py-6 sm:px-0">
                <div class="space-y-4">
                    <% feedback.forEach(function(item) { %>
                        <div class="bg-white shadow rounded-lg p-6" id="feedback-<%= item.id %>">
                            <div class="flex justify-between items-start">
                                <div class="space-y-2">
                                    <div class="flex items-center space-x-4">
                                        <div class="space-y-1">
                                            <div class="flex items-center space-x-2">
                                                <span class="text-sm font-medium text-gray-500">From:</span>
                                                <span class="text-sm text-gray-900"><%= item.display_name %></span>
                                            </div>
                                            <% if (item.phone_number) { %>
                                            <div class="flex items-center space-x-2">
                                                <span class="text-sm font-medium text-gray-500">Phone:</span>
                                                <span class="text-sm text-gray-900"><%= item.phone_number %></span>
                                            </div>
                                            <% } %>
                                        </div>
                                    </div>
                                    <p class="text-gray-900"><%= item.content %></p>
                                    <p class="text-sm text-gray-500">
                                        <%= new Date(item.created_at).toLocaleString() %>
                                    </p>
                                </div>
                                <button onclick="deleteFeedback(<%= item.id %>)" 
                                    class="text-red-600 hover:text-red-800">
                                    Delete
                                </button>
                            </div>

                            <% if (item.admin_responded) { %>
                                <div class="mt-4 bg-gray-50 p-4 rounded">
                                    <div class="flex items-center space-x-2">
                                        <span class="text-sm font-medium text-gray-500">Response:</span>
                                        <span class="text-sm text-gray-900"><%= item.admin_response %></span>
                                    </div>
                                </div>
                            <% } else { %>
                                <div class="mt-4">
                                    <div class="flex space-x-4">
                                        <textarea id="response-<%= item.id %>" 
                                            class="flex-1 shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md"
                                            placeholder="Write your response..."></textarea>
                                        <button onclick="submitResponse(<%= item.id %>)"
                                            class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                                            Send
                                        </button>
                                    </div>
                                </div>
                            <% } %>
                        </div>
                    <% }); %>
                </div>
            </div>
        </main>
    </div>

    <script>
        async function submitResponse(feedbackId) {
            const response = document.getElementById(`response-${feedbackId}`).value;
            if (!response.trim()) return;

            try {
                const result = await fetch(`/admin/respond/${feedbackId}`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ response }),
                });
                const data = await result.json();
                if (data.success) {
                    window.location.reload();
                } else {
                    alert(data.message);
                }
            } catch (error) {
                console.error('Error:', error);
                alert('Error sending response');
            }
        }

        async function deleteFeedback(feedbackId) {
            if (!confirm('Are you sure you want to delete this feedback?')) return;

            try {
                const result = await fetch(`/admin/feedback/${feedbackId}`, {
                    method: 'DELETE',
                });
                const data = await result.json();
                if (data.success) {
                    document.getElementById(`feedback-${feedbackId}`).remove();
                } else {
                    alert(data.message);
                }
            } catch (error) {
                console.error('Error:', error);
                alert('Error deleting feedback');
            }
        }
    </script>
</body>
</html>
